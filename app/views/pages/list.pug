extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th Name
						th Director
						th Country
						th Release Data
						th Input Date
						th pv
						th Check
						th Update
						th Delete
				tbody
					each item in movies
						tr(class="item-id-"+item._id)
							td #{item.title}
							td #{item.director}
							td #{item.country}
							td #{item.year}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td #{item.pv }
							td: a(target="_blank", href="/movie/"+item._id) Check
							td: a(target="_blank", href="/admin/movie/update/"+item._id) Modify
							td
								button.btn.btn-danger.del(type="button", data-id=item._id) Delete
	script(src="/js/admin.js")
